<header class="w-full max-w-7xl mx-auto {{theme.navigation.background}} py-4">

  <nav class="hidden md:block max-w-6xl mx-auto" id="webNavigation">
    <div class="max-w-lg mx-auto text-center">
    <a
      class="transition ease-in-out hover:scale-105 inline-block"
      href="/"
      title="Home"
    >
      <img
        src="/images/logo/dj-cruze-logo-black.svg"
        width="228"
        height="62"
        title="DJ Cruze"
        alt="DJ Cruze logo"
      />
    </a>
    </div>
    <div class="mx-auto text-center space-x-8 py-8">
      {% for menuItem in mainMenu %}
      {% if page.url contains menuItem.url and
      menuItem.url != "/" or page.url == "/" and menuItem.url == "/" %}
      <a
        class="uppercase {{theme.navigation.text}} {{theme.navigation.selected}} text-xl font-extrabold pb-1 border-b-4"
        href="{{menuItem.url}}"
        title="{{menuItem.title}}"
        >{{menuItem.name}}</a
      >
      {% else %}
      <a
        class="uppercase {{theme.navigation.text}} text-xl font-extrabold"
        href="{{menuItem.url}}"
        title="{{menuItem.title}}"
        >{{menuItem.name}}</a
      >
      {% endif %}
      {% endfor %}
    </div>
  </nav>

  {% comment %} Mobile menu {% endcomment %}
  <nav class="block md:hidden max-w-6xl mx-auto">
    <div class="grid grid-cols-2 items-center px-4">
      <div class="">
        <a
          class="block"
          href="/"
          title="Home"
        >
          <img
            src="/images/logo/dj-cruze-logo-black.svg"
            width="228"
            height="62"
            title="DJ Cruze"
            alt="DJ Cruze logo"
          />
        </a>
      </div>
      <div class="justify-self-end">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" class="w-10 h-10 {{theme.navigation.button}}" aria-hidden="true" id="navigationButton"><!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z"/></svg>
      </div>
    </div>

    <div class="hidden w-full px-4 py-4 text-center" id="mobileNavigation">
      <ul class="{{theme.navigation.text}} space-y-4">
      {% for menuItem in mainMenu %}
      {% if page.url contains menuItem.url and
      menuItem.url != "/" or page.url == "/" and menuItem.url == "/" %}
        <li class="">
          <a
          class="uppercase {{theme.navigation.text}} {{theme.navigation.selected}} text-xl font-extrabold pb-1 border-b-4"
          href="{{menuItem.url}}"
          title="{{menuItem.title}}"
          >{{menuItem.name}}</a>
        </li>
        {% else %}
        <li class="">
          <a
          class="uppercase {{theme.navigation.text}} text-xl font-extrabold"
          href="{{menuItem.url}}"
          title="{{menuItem.title}}"
          >{{menuItem.name}}</a>
        </li>
        {% endif %}
        {% endfor %}
      </ul>
    </div>
  </nav>  
</header>
