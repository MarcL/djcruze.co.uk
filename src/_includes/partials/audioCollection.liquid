
<div class="w-100 pa2">
    <div class="flex flex-wrap items-center justify-center">
    {%- for item in collection reversed -%}
    <div class="w-100 w-50-m w-25-l pa2">
        <a href="{{item.url}}" class="link dim">
            {%- if item.data.media.image -%}
                <img src="{{item.data.media.image}}" alt="{{item.data.title}}" title="{{item.data.title}}" class="w-100 black-10 shadow-4"/>
            {%- else -%}
                <img src="/images/mixes/default-logo-600x600.jpg" alt="{{item.data.title}}" title="{{item.data.title}}" class="w-100 black-10 shadow-4"/>
            {%- endif -%}
            
            <dl class="mt2 f4 lh-copy tc">
                <dt class="clip">Title</dt>
                <dd class="ml0 black truncate w-100">{{item.data.title}}</dd>
            </dl>
        </a>
    </div>
    {%- endfor -%}
    </div>
</div>
