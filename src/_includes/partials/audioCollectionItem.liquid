{%- assign imageUrl = "/images/mixes/dj-cruze-mix-logo-600x600.jpg" -%}
{%- if item.data.media.image -%}
    {%- assign imageUrl = item.data.media.image -%}
{%- endif -%}
<div class="w-full px-4 xl:px-0">
<a href="{{item.url}}" class="group block">
    <img
    src="{{imageUrl}}"
    alt="{{item.data.title}}"
    title="{{item.data.title}}"
    class="w-full shadow-md rounded-sm group-hover:brightness-75"
    loading="lazy"
    />

    <div class="w-full pt-4">
        <h3 class="{{theme.main.text}} font-bold text-2xl group-hover:underline text-center uppercase">{{item.data.title}}</h3>
    </div>
</a>
</div>
