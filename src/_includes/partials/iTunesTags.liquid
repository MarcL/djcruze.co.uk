{% if episode.data.media.episodeType %}
    <itunes:episodeType>{{episode.data.media.episodeType}}</itunes:episodeType>
{% else %}
    <itunes:episodeType>full</itunes:episodeType>
{% endif %}

{% if episode.data.media.podcastImage %}
    <itunes:image href="{{episode.data.media.podcastImage | prepend: site.url}}" />
{% else %}
{% if episode.data.media.image %}
    <itunes:image href="{{episode.data.media.image | prepend: site.url}}" />
{% endif %}
{% endif %}

{% if episode.data.media.episode %}
    <itunes:episode>{{episode.data.media.episode}}</itunes:episode>
{% endif %}

{% if episode.data.media.season %}
    <itunes:season>{{episode.data.media.season}}</itunes:season>
{% endif %}

{% if episode.data.media.duration %}
    <itunes:duration>{{episode.data.media.duration}}</itunes:duration>
{% endif %}