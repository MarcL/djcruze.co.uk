<div class="pt2 pb4 ph0 ph1-ns flex flex-wrap justify-center items-center">
    <div class="w-100 w-40-ns">
        <a href="{{item.url}}" class="link dim" title="{{item.data.title}}" alt="{{latestTitle}}">
            {%- if item.data.media.image -%}
                <img src="{{item.data.media.image}}" alt="{{item.data.title}}" title="{{item.data.title}}" class="w-100 black-10 shadow-4 br1"/>
            {%- else -%}
                <img src="/images/mixes/default-logo-600x600.jpg" alt="{{item.data.title}}" title="{{item.data.title}}" class="w-100 black-10 shadow-4 br1"/>
            {%- endif -%}
        </a>
    </div>
    <div class="w-100 w-60-ns ph0 ph2-ns">
        {%- if latestTitle -%}
        <h3 class="f4 f3-l fw7 tc ttu near-black pv0 mt2 mt0-ns mb2 silver">{{latestTitle}}</h3>
        {%- endif -%}
        <a href="{{item.url}}" class="link dim" title="{{item.data.title}}" alt="{{latestTitle}}">
            <h3 class="f3 f1-l fw7 tc ttu near-black pv0 mt2 mt0-ns mb0">{{item.data.title}}</h3>
        </a>
        {%- if item.data.excerpt -%}
        <div class="f4 f3-ns pv1 ph2 lh-copy tc">
            {{item.data.excerpt}}
        </div>
        {%- endif -%}
    </div>
</div>
