<h2 class="f3 f2-ns fw6 ttu tc mt2 mb1">{{latestTitle}}</h2>

<div class="pt2 pb4 ph0 ph1-ns flex flex-wrap justify-center">
    <div class="w-100">
        <a href="{{item.url}}" class="link dim" title="{{item.data.title}}" alt="{{latestTitle}}">
            {%- if item.data.media.image -%}
                <img src="{{item.data.media.image}}" alt="{{item.data.title}}" title="{{item.data.title}}" class="w-100 black-10 shadow-4 br1"/>
            {%- else -%}
                <img src="/images/mixes/default-logo-600x600.jpg" alt="{{item.data.title}}" title="{{item.data.title}}" class="w-100 black-10 shadow-4 br1"/>
            {%- endif -%}
        </a>
    </div>
    <div class="w-100 ph0 ph2-ns">
        <a href="{{item.url}}" class="link dim" title="{{item.data.title}}" alt="{{latestTitle}}">
            <h3 class="f4 f2-ns fw7 tc ttu near-black pv0 mv0">{{item.data.title}}</h3>
        </a>
    </div>
</div>
